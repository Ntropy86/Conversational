# Core API Keys (REQUIRED)
GROQ_API_KEY=your_groq_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Service Configuration
WHISPER_MODEL_SIZE=base
VAD_THRESHOLD=0.8
TTS_VOICE=en-US-AriaNeural
API_PORT=8000
DEBUG_MODE=false

# Optional: Performance Tuning
MAX_AUDIO_LENGTH=30
CLEANUP_INTERVAL=15
AUDIO_MAX_AGE=30

# Optional: Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Optional: Security (for production)
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Supabase Database Configuration (REQUIRED for persistent storage)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Database fallback settings
USE_DATABASE=true
FALLBACK_TO_JSON=false

# Optional: Legacy Database (if using persistent storage)
# DATABASE_URL=sqlite:///./conversational_ai.db
# REDIS_URL=redis://localhost:6379
